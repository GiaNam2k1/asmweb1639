<!DOCTYPE html>
<html>
	<head>
		<meta charset="UTF-8">
		<title>
			{% block title %}Library Management System
			{% endblock %}
		</title>
		<link
		rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
		{# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
		{% block stylesheets %}
			<!-- CSS only -->
			<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
		{% endblock %}

        {% block javascripts %}
            <!-- JavaScript Bundle with Popper -->
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
        {% endblock %}
    </head>
    <body style="background: #607D8B">
        {% block flash %}
            <div class="container col-md-8 mt-3">
                {% for flash in app.flashes("Error") %}
                    <p class="alert alert-danger"> {{ flash }} </p>
                {% endfor %}
                {% for flash in app.flashes("Success") %}
                    <p class="alert alert-success"> {{ flash }} </p>
                {% endfor %}
            </div>
        {% endblock %}

        {# {% block logo %}
            <center>
                <image src="{{asset('images/logo.png')}}" width="350" height="150">
            </center>
        {% endblock %} #}

        {% block nav %}
            <nav class="navbar navbar-expand-sm bg-dark navbar-dark">
                <ul class="nav navbar-nav">
                    <li class="nav-item active">
                        <h3><a class="nav-link" href="{{path('home')}}">Home </a></h3>
                    </li>
					<li class="nav-item">
                        <h3><a class="nav-link" href="{{path('student_index')}}">Student</a></h3>
                    </li>
					<li class="nav-item">
                        <h3><a class="nav-link" href="{{path('club_index')}}">Club</a></h3>
                    <li class="nav-item">
                        <h3><a class="nav-link" href="{{path('teacher_index')}}">Teacher</a></h3>
                    </li>
                    <li class="nav-item">
                        <h3><a class="nav-link" href="{{path('classroom_index')}}">Class</a></h3>
                    </li>
                    
                    <li class="nav-item">
                        <h3><a class="nav-link" href="{{path('course_index')}}">Course</a></h3>
                    </li>
                    <li class="nav-item">
                        <h3><a class="nav-link" href="{{path('course_category_index')}}">Course Category</a></h3>
                    </li>
                    <li class="nav-item">
                        <h3><a class="nav-link" href="{{path('app_logout')}}">Logout</a></h3>
                    </li>

                    </ul>
                </div>
            </nav>
        {% endblock %}
        {% block body %}{% endblock %}
        {% block copyright %}
        <div class="container col-md-8 text-center text-bold mt-5">
            <h2>
                <i class="fa fa-copyringt" aria-hidden="true">
                    Copyright by Greenwich University - 2021
                </i>
            </h2>
        </div>
        {% endblock %}
    </body>
</html>
