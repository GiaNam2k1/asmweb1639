{% extends 'base.html.twig' %}

{%block body %}
<div class="container-md col-md-8 text-center">
    <a class="btn btn-primary mt-4 mb-4" href="{{path('teacher_add')}}">Add</a>
    <table class="table table-striped|sm|bordered|hover|inverse table-inverse table-responsive">
        <thead class="thead-inverse|thead-default">
            <tr>
                <th>STT</th>
                <th>Name</th>
                <th>Image</th>
                <th>Actions</th>
            </tr>
            </thead>
            <tbody>
            {% for t in teachers %}
                <tr>
                    <td scope="row">{{t.id}}</td>
                    <td><a href="{{path('teacher_detail',{'id':t.id})}}">{{t.name}}</a></td>
                    <td>
                        <img src="{{ asset('images/'~t.image) }}" wight="100" height="120">
                    </td>
                    <td>
                        <a class="btn btn-warning" href="{{path('teacher_edit',{'id':t.id})}}">Edit</a>
                        <a class="btn btn-danger" href="{{path('teacher_delete',{'id':t.id})}}"
                        onclick="return confirm('Are you sure delete this teacher?')"
                        >Delete</a>
                    </td>
                </tr>
            </tbody>
            {% endfor %}
    </table>
</div>   
    
{%endblock %}
