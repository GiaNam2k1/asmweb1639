{% extends 'base.html.twig' %}

{% block body %}
	<a class="btn btn-primary mt-4 mb-4" href="{{ path('club_add')}}">
		Add new club
	</a>
	<table class="table">
		<thead>
			<tr>
				<th>Club ID</th>
				<th>Club Name</th>
				<th>Image</th>
				<th>Actions</th>
			</tr>
		</thead>
		<tbody>
			{% for club in clubs %}
				<tr>
					<td scope="row">{{ club.id }}</td>
					<td>{{ club.name }}</td>
					<td>
						<a href="{{ path('club_detail', {'id' : club.id} )}}">
							<img src="{{ asset('images/'~club.image) }}" wight="100" height="120">
						</a>
					</td>
					<td>
						<a href="{{ path('club_edit', {'id' : club.id} )}}">
							Edit
						</a>
						<a href="{{ path('club_delete', {'id' : club.id} )}}">
							Delete
						</a>
					</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>

{% endblock %}
