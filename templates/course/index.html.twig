{% extends 'base.html.twig' %}

{% block body %}
{% if is_granted('ROLE_ADMIN') %}
		<a class="btn btn-primary" href="{{ path('course_add')}}">
			Add
		</a>
	{% endif %}
<table class="table">
		<thead>
			<tr>
				<th>Course ID</th>
				<th>Course Name</th>
				<th>Description</th>
				<th>Actions</th>
			</tr>
		</thead>
		<tbody>
			{% for course in courses %}
				<tr>
					<td scope="row">{{ course.CourseID }}</td>
					<td>
						<a href="{{ path ('course_detail', {'id': course.id })}}">
							{{ course.Name }}</a>
					</td>
					<td>
						<a href="{{ path ('course_detail', {'id': course.id })}}">
							{{ course.Description }}</a>
					</td>
					<td>
						<a href="{{ path ('course_edit', {'id' : course.id }) }}">
							Edit
						</a>
					</td>
					<td>
						<a href="{{ path ('course_delete', {'id' : course.id }) }}" 
                        onclick="return confirm('Do you want to delete this course ?')">
							Delete
						</a>
					</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>
{% endblock %}
