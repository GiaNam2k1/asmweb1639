{% extends 'base.html.twig' %}

{% block body %}
	<table class="table">
		<thead>
			<tr>
				<th>Course Name</th>
				<th>CourseID</th>
				<th>Description</th>
				<th>Actions</th>
			</tr>
		</thead>
		<tbody>,

			<tr>
				<td scope="row">{{ course.CourseID }}</td>
				<td>{{ course.Name }}</td>
				<td>{{ course.Description }}</td>
				<td>
					{% if course.coursecagtegories != null %}

						{% for course in coursecategory.courses %}
							<a href="{{ path ('course_detail', {'id' : course.id }) }}">
								{{course.Name}}
								<br>
							</a>
						{% endfor %}

					{% endif %}
				</td>
				{% if is_granted('ROLE_ADMIN') %}
					<td>
						<a href="{{ path ('course_edit', {'id' : course.id })}}"></a>
						<a href="{{ path ('course_delete', {'id' : course.id }) }}" onclick="return confirm('Do you want to delete this course ?')"></a>
					</td>
				{% endif %}
			</tr>

		</tbody>
	</table>

{% endblock %}
