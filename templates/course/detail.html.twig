{% extends 'base.html.twig' %}

{% block body %}
<div class="container-md col-md-8 text-center">
	<table class="table table-dark">
		<thead class="thead-inverse|thead-default">
			<tr>
				<th>Course Name</th>
				<th>CourseID</th>
				<th>Image</th>
				<th>Description</th>
				<th>Course</th>
				<th>Actions</th>
			</tr>
		</thead>
		<tbody>

			<tr>
				<td scope="row">{{ course.CourseID }}</td>
				<td>{{ course.Name }}</td>
				<td><img src="{{ asset('images/'~course.image) }}" wight="100" height="120"></td>
				<td>{{ course.Description }}</td>

				<td>
					{% if course.courseCategory != null %}
							<a href="{{ path ('course_category_detail', {'id' : course.courseCategory.id }) }}" style="text-decoration:none">
								{{course.courseCategory.Name}}
								<br>
							</a>
					{% endif %}
				</td>
				{% if is_granted('ROLE_ADMIN') %}
					<td>
						<a class="btn btn-warning" href="{{ path ('course_edit', {'id' : course.id })}}">Edit</a>
						<a class="btn btn-danger" href="{{ path ('course_delete', {'id' : course.id }) }}" onclick="return confirm('Do you want to delete this course ?')">Delete</a>
					</td>
				{% endif %}
			</tr>

		</tbody>
	</table>
</div>
{% endblock %}
