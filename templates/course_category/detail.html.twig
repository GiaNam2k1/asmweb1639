{% extends 'base.html.twig' %}

{% block body %}
    <table class="table">
        <thead>
            <tr>
                <th>Course Category Name</th>
				<th>Description</th>
				<th>Course</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>,

            <tr>
                <td>{{ coursecategory.Name }}</td>
				<td>{{ coursecategory.Description }}</td>
				<td>
					{% if coursecategory.courses != null %}

						{% for course in coursecategory.courses %}
							<a href="{{ path('course_detail', {'id' : course.id }) }}">
							{{course.Name}} <br>
							</a>
						{% endfor %}
						
					{% endif %}
				</td>
				{% if is_granted('ROLE_ADMIN') %}
					<td>
						<a href="{{ path('course_category_edit', {'id' : coursecategory.id })}}">
						</a>
						<a href="{{ path('course_category_delete', {'id' : coursecategory.id }) }}" onclick="return confirm('Do you want to delete this course category ?')">
						</a>
					</td>
				{% endif %}
            </tr>

        </tbody>
    </table>
    
{% endblock %}
