{% extends "base.html.twig" %}

{% block body %}

<div class="container col-md-6 mt-3 mb-3" style="border: 3px solid black;background-color:#424242;color:white">
    <h2 class="text-center">Edit new teacher</h2>
    <div class="col md-6"></div>
       {{ form_start (form) }}
      <div class="form-group">
         {{ form_label (form.course) }}
         {{ form_widget (form.course,
            {
               'attr' : {'class' : 'form-control'}
            })
         }}
      </div>
      <div class="form-group">
         {{ form_label (form.classname) }}
         {{ form_widget (form.classname,
            {
               'attr' : {'class' : 'form-control'}
            })
         }}
      </div>
      <div class="form-group">
      {{ form_label (form.teachers) }}
      {{ form_widget (form.teachers,
         {
            'attr' : {'class' : 'form-control'}
         })
      }}
      </div>
      <div class="form-group text-center mt-3 mb-3">
         <input class="btn btn-primary" type="submit" value="Submit">
         <a class="btn btn-danger" href="{{path('classroom_index')}}">
            Return
         </a>
      </div>
   {{ form_end (form) }}
</div>

{% endblock %}